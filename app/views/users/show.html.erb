<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
  <% if @user.mobilecameras.any? %>
    <h3>Registered mobile (<%= @user.mobilecameras.count %>)</h3>
    <ol class="mobilecamera">
      <%= render @mobilecameras %>
    </ol>
    <%= will_paginate @mobilecameras %>
  <% end %>
  </div>
</div>
